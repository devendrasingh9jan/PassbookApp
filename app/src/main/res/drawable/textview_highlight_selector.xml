<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_purple" /> <!-- Set your desired highlight color (purple) -->
        </shape>
        <color android:color="#FFFFFF" /> <!-- Set your desired text color (white) -->
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Set your default background color (white) -->
        </shape>
        <color android:color="@android:color/white" /> <!-- Set your default text color (black) -->
    </item>
</selector>
